global
log /dev/log    local0
stats socket /run/haproxy/admin.sock mode 660 level admin

defaults
log     global
mode    http
option  httplog
timeout connect  10s
timeout client  30s
timeout server  30s

frontend veldtsdigital-tech-frontend
bind *:80
bind *:443 ssl crt /etc/haproxy/certs/veldtsdigital.tech.pem
http-request redirect scheme https unless { ssl_fc }
http-request set-header X-Forwarded-Proto https
default_backend veldtsdigital-tech-backend

backend veldtsdigital-tech-backend
balance roundrobin
server 530601-web-01 52.87.255.41:80 check
server 530601-web-02 54.157.176.117:80 check
